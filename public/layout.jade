doctype html
html(lang='es')
  head
    title Alteridad y Exclusiones
    link(rel='stylesheet', href='/css/style.css')
    script(src='/components/jquery/dist/jquery.min.js')
    script(src='/components/bootstrap/dist/js/bootstrap.min.js')
    script(src='/components/chosen/public/chosen.jquery.min.js')
  body
    #wrap
      #header
        nav.navbar.navbar-default
          .container
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                span.sr-only Navegación
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href='/') Alteridad y Exclusiones
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
              ul.nav.navbar-nav
                li
                  a(href='/') Inicio
                li
                  a(href='/proyecto') Proyecto

              ul.nav.navbar-nav.navbar-right
                li.dropdown
                  a.dropdown-toggle(href='#', data-toggle='dropdown') Iniciar sesión <b class="caret"></b>
                  .dropdown-menu(style='padding: 15px; width: 300px')
                    form
                      .form-group
                        input#email.form-control(type='email', name='email', placeholder='Correo electrónico')
                      .form-group
                        input#password.form-control(type='password', name='password', placeholder='Contraseña')

                      button.btn.btn-block.btn-default(type='submit') Iniciar sesión

      #main
        block content
                    
    #footer
      .container 2014 © Facultad de Filosofía y Letras

